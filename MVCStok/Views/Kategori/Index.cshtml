                    @*//10.Adım revize işlemi.*@
                    <td><a href="/Kategori/KategoriSil/@x.id" class="btn btn-danger">Sil</a></td> @*Bu satırda yazan uzantı aslında action result*@
                   @*11.Adım revize işlemi*@
                    <td><a href="/Kategori/KategoriGetir/@x.id" class="btn btn-success">Güncelle</a></td>
                </tr>
            }

</table>
