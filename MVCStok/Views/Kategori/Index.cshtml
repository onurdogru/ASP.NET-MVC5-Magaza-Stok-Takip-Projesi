@using MVCStok.Models.Entity
@model List<tblkategori>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@*Yukarıdaki alan, layoutun yüklü olduğu alan anlamına gelir*@

@*4. ADIMek ALAN SONUCU OLUŞAN ALAN*@

<h2>Index</h2>

@*6.ADIM :tablo hazırlarız. *@ 

