        <th>ID</th>
        <th>KATEGORİ ADI</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>

    @*8.ADIMek*@

    @foreach (var x in Model)
            {
                    
                <tr>
                    <td>@x.id</td>
