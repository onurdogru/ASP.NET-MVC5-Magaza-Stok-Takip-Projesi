@*13.ADIMek*@
@using MVCStok.Models.Entity
@model List<tblurunler>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@*36.ADIMdevam*@
@using(Html.BeginForm("Index", "Urun", FormMethod.Get))
            {
    <p>
        Ürün Adı : @Html.TextBox("p");
        <input type="submit" value="Ara" />
    </p>
            }

<h2>Ürünlerin Index</h2>
@*13.ADIMek aşağıdaki table yapısıdır.*@

<table class="table table-bordered">
   @*alt kısmı, sql ürün tablomuza göre revize ederiz.*@
    <tr>
        <th>ID</th>
        @*<th>KATEGORİ ADI</th>*@
        <th>ÜRÜN ADI</th>
        <th>MARKA</th>
        <th>STOK</th>
        <th>ALIŞ FİYAT</th>
        <th>SATIŞ FİYAT</th>
        @*<th>KATEGORİ</th>*@  @*????*@
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>

  

    @foreach (var x in Model)
    {

        <tr>
            @*13.ADIMa göre revize ederiz.*@
            <td>@x.id</td>
            <td>@x.ad</td>
            <td>@x.marka</td>
            <td>@x.stok</td>
            <td>@x.alisfiyat</td>
            <td>@x.satisfiyat</td>
            @*<td>@x.tblkategori.id</td>*@  @*????*@

            @*17.Adımek*@
            <td><a href="/Urun/UrunSil/@x.id" class="btn btn-danger">Sil</a></td>
            <td><a href="/Urun/UrunGetir/@x.id" class="btn btn-success">Güncelle</a></td>
        </tr>
    }

</table>


<a href="/Urun/YeniUrun" class="btn btn-primary">Yeni Ürün Girişi</a>