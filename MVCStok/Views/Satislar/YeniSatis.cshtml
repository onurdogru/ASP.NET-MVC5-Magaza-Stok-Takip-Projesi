    ViewBag.Title = "YeniSatis";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>YeniSatis</h2>
<form method="post">
    <label>Yeni Satış Ekleme</label>
    @*//33.Adım devamı*@

