@model MVCStok.Models.Entity.tblmusteri
@{
    ViewBag.Title = "YeniMusteri";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yeni Musteri Ekleme</h2>

<form method="post">
    <label>Müşteri Adı</label>
    @*<input type="text" class="form-control" name="ad" placeholder="kategori adı" />*@
    @Html.TextBoxFor(x => x.ad, new { @class = "from-control" })

    @*30.ADIMek, validasyonlar ek*@
    @Html.ValidationMessageFor(x => x.ad, "", new { @style = "color:red" })

    <br />
    <label>Müşteri Soyad</label>
    @Html.TextBoxFor(x => x.soyad, new { @class = "from-control" })
    @Html.ValidationMessageFor(x => x.soyad, "", new { @style = "color:red" })

    <br />

    <label>Şehir</label>
    @Html.TextBoxFor(x => x.sehir, new { @class = "from-control" })

    <br />

    <label>Bakiye</label>
    @Html.TextBoxFor(x => x.bakiye, new { @class = "from-control" })

    <br />

    <br />

    <br />

    <button class="btn btn-info">Kaydet</button>
</form>

